# System Test Configuration for Portal64 API
# This file contains configuration settings for the automated system tests

# Test Server Configuration
BASE_URL=http://test.svw.info:8080
HEALTH_ENDPOINT=/health

# Test Execution Settings
TIMEOUT_SECONDS=300
REQUEST_TIMEOUT_SECONDS=30
MAX_RESPONSE_TIME_SECONDS=5

# Concurrency Test Settings
CONCURRENT_REQUESTS=10
CONCURRENT_SUCCESS_THRESHOLD=5

# Test Data Settings
DEFAULT_LIMIT=20
MAX_LIMIT=100
TEST_CLUB_ID=C0101
TEST_PLAYER_ID=C0101-1014
TEST_TOURNAMENT_ID=C529-K00-HT1

# Pagination Test Settings
DEFAULT_OFFSET=0
LARGE_OFFSET=999999

# Date Range Test Settings  
TEST_START_DATE=2023-01-01
TEST_END_DATE=2023-12-31
RECENT_DAYS=30

# CSV Test Settings
CSV_CONTENT_TYPE=text/csv
CSV_DISPOSITION_HEADER=attachment

# CORS Test Settings
TEST_ORIGIN=http://localhost:3000
EXPECTED_CORS_ORIGIN=*

# Performance Test Settings
PERFORMANCE_TEST_ENDPOINTS=5
BOUNDARY_TEST_LONG_QUERY_LENGTH=1000

# Test Categories (true/false)
RUN_FUNCTIONAL_TESTS=true
RUN_ERROR_HANDLING_TESTS=true
RUN_PERFORMANCE_TESTS=true
RUN_BOUNDARY_TESTS=true
RUN_CORS_TESTS=true
RUN_SWAGGER_TESTS=true

# Logging and Output
VERBOSE_OUTPUT=false
ENABLE_RACE_DETECTION=false
SHOW_REQUEST_DETAILS=false

# Test Environment
ENVIRONMENT=test
TEST_DATABASE_REQUIRED=false
SKIP_IF_SERVER_UNAVAILABLE=true
