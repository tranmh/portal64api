# Environment Configuration for Portal64 API

# Server Configuration
SERVER_PORT=8080
SERVER_HOST=0.0.0.0
ENVIRONMENT=development

# HTTPS Configuration (optional)
ENABLE_HTTPS=false
CERT_FILE=
KEY_FILE=

# Server Timeouts (seconds)
READ_TIMEOUT=10
WRITE_TIMEOUT=10

# MVDSB Database Configuration
MVDSB_HOST=localhost
MVDSB_PORT=3306
MVDSB_USERNAME=portal64api
MVDSB_PASSWORD=your_password_here
MVDSB_DATABASE=mvdsb
MVDSB_CHARSET=utf8mb4

# Portal64_BDW Database Configuration  
PORTAL64_BDW_HOST=localhost
PORTAL64_BDW_PORT=3306
PORTAL64_BDW_USERNAME=portal64api
PORTAL64_BDW_PASSWORD=your_password_here
PORTAL64_BDW_DATABASE=portal64_bdw
PORTAL64_BDW_CHARSET=utf8mb4


# Redis Cache Configuration
CACHE_ENABLED=true
CACHE_ADDRESS=localhost:6379
CACHE_PASSWORD=
CACHE_DATABASE=0
CACHE_MAX_RETRIES=3
CACHE_POOL_SIZE=10
CACHE_MIN_IDLE_CONNS=5
CACHE_DIAL_TIMEOUT=5s
CACHE_READ_TIMEOUT=3s
CACHE_WRITE_TIMEOUT=3s
CACHE_POOL_TIMEOUT=4s
CACHE_IDLE_TIMEOUT=5m
CACHE_MAX_CONN_AGE=0
CACHE_REFRESH_THRESHOLD=0.8
CACHE_REFRESH_WORKERS=5

# Kader-Planung Integration Configuration
KADER_PLANUNG_ENABLED=true
KADER_PLANUNG_BINARY_PATH=kader-planung/bin/kader-planung.exe
KADER_PLANUNG_OUTPUT_DIR=internal/static/demo/kader-planung
KADER_PLANUNG_API_BASE_URL=http://localhost:8080
KADER_PLANUNG_CLUB_PREFIX=
KADER_PLANUNG_OUTPUT_FORMAT=csv
KADER_PLANUNG_TIMEOUT=30
KADER_PLANUNG_CONCURRENCY=0
KADER_PLANUNG_VERBOSE=false
KADER_PLANUNG_MAX_VERSIONS=7
